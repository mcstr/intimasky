<div class="navbar fixed-top navbar-expand-sm navbar-dark navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <% if current_page?(root_path) %>
      <i class='bx bx-mask bx-spin ' ></i>
    <% else %>
      <i class='bx bx-mask bx-spin crimsom' ></i>
    <% end %>
    <%# <%= image_tag "https://res.cloudinary.com/dqlvehu5z/image/upload/o_39/v1582558617/mask_lolhmn.png" %>
    
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <i class='bx bx-menu bx-rotate-180' style='color:#ffffff'  ></i>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to root_path, class: 'nav-link' do %>
          <span>Home</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Search", search_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Masks", "/masks", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/mcstr", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "View my bookings", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Post a mask ", new_mask_path, class: "dropdown-item" %>
            <%= link_to "Log out", "#", class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item grow">
          <% if current_page?(root_path) %>
            <%= link_to "Login", new_user_session_path, class: "nav-link-login" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "nav-link-login-crimsom" %>
          <% end %>
          
          </li>
        <% end %>
    </ul>
  </div>
